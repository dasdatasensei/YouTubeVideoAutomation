# YouTube API Configuration
YOUTUBE_CLIENT_ID=your_client_id_here
YOUTUBE_CLIENT_SECRET=your_client_secret_here
YOUTUBE_REDIRECT_URI=http://localhost:8080
YOUTUBE_API_KEY=your_api_key_here

# Application Settings
DEBUG=false
WORK_DIR=work
DOWNLOAD_DIR=downloads
MAX_CONCURRENT_DOWNLOADS=3
MAX_RETRIES=3
RETRY_DELAY=5
BLACK_SCREEN_DURATION=2
VIDEO_QUALITY=best
LOG_LEVEL=INFO
LOG_FILE=youtube_processor.log

# Docker Settings (if using Docker)
DOCKER_HUB_USERNAME=dasdatasensei
DOCKER_HUB_TOKEN=your_dockerhub_token

# Contact Information
MAINTAINER_NAME="Dr. Jody-Ann S. Jones"
MAINTAINER_EMAIL=jody@thedatasensei.com
COMPANY_WEBSITE=www.thedatasensei.com
GITHUB_REPO=https://github.com/dasdatasensei/YouTubeVideoAutomation
